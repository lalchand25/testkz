<script type="text/javascript">
    function validate() {
        var retval = false;
        for (var i = 0; i < document.myForm.ActualAns1.length; i++) {
            if (document.myForm.ActualAns1[i].checked) {
                retval = true;
            }
        }
        if (retval == false) {
            alert("Option not selected");

        }
        return retval;
    }

