@Session["projectmetatags"]
<script type="text/javascript">
    function OpenPopup1(url, windoname) {
        window.open(url, windoname, 'target=blank,width=920,height=550,top=250,screenY=250,left=350,screenX=50,toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=yes');
    }
</script>

<script type="text/javascript">
    function ShowSlide(id) {
