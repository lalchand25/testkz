        window.open(url, 'Browser', 'width=1100,height=750,top=2,screenY=5,left=250,screenX=50,toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=yes');


    }
</script>
<!--BANNER START-->
