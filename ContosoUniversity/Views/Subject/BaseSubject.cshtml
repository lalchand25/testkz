<table width="95%" align="center" class='form2'>

    @Html.ValidationSummary(true)
    <tr>
        <td align="left" style="Width: 20%">
            <label>Subject Name</label> </td>
        <td align="left" style="Width: 80%">
            <div class="editor-field">
                @Html.TextBoxFor(model => model.SubjectName, new { @class = "form-control" })
                <b>@Html.ValidationMessageFor(model => model.SubjectName)</b>
            </div>
        </td>

    </tr>

       <tr>
        <td align="left" style="Width: 20%">
            <label>Short Description</label> </td>
        <td align="left" style="Width: 80%">
            <div class="editor-field">
                @Html.TextBoxFor(model => model.ShortDescription, new { @class = "form-control" })
                <b>@Html.ValidationMessageFor(model => model.ShortDescription)</b>
            </div>
        </td>

    </tr>

    <tr>
        <td align="left">
            <label>Description</label></td>
        <td>
            @Html.TextAreaFor(model => model.SubjectDesc, new { @class = "form-control" })
            <b><span style="color: Red">@Html.ValidationMessageFor(model => model.SubjectDesc)</span></b></td>
    </tr>

    <tr>
        <td>
            <label>Image Path</label></td>
        <td>
		<input type="file" id="FileUpload0" name="file" />
         <p>Formats : png,jpg,gif,jpeg. Maximum Size : 20kb</p>
            
        </td>
    </tr>

