<script type="text/javascript">
    $(function () {
        var nextDayDate = new Date();
        nextDayDate.setDate(nextDayDate.getDate() + 1);
        $("#StartDate").datepicker({
            changeMonth: true,
            changeYear: true,
            startDate: nextDayDate,
            minDate: nextDayDate
        });
    });

    $(function () {
        var nextDayDate = new Date();
        nextDayDate.setDate(nextDayDate.getDate() + 0);
        $("#EndDate").datepicker({
            changeMonth: true,
            changeYear: true,
            startDate: nextDayDate,
            minDate: nextDayDate
        });
    });
</script>


