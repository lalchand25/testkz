        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            Expiry Date  
            <br />
            @Html.EditorFor(model => model.ExpireDate)
            <div class="msgValidation">@Html.ValidationMessageFor(model => model.ExpireDate) </div>


        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            Card Holders Name  
            <br />
            @Html.EditorFor(model => model.CardHoldersName)
            <div class="msgValidation">@Html.ValidationMessageFor(model => model.CardHoldersName) </div>


        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            CVV Number
            <br />
            @Html.EditorFor(model => model.CVVNumber)
