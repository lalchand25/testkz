    @Html.AntiForgeryToken()
    
  
    <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @Html.RadioButtonFor(model => model.ModeOfPayment, "Cheque", true) <b> Cheque </b>
