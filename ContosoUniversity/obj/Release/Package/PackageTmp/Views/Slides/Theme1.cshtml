        }

        if (id == 2) {
            div2.style.display = 'block'; //Picture
            DivSlideName.style.display = 'block';
            DivButton.style.display = 'block';
        }

        if (id == 3) {
            div3.style.display = 'block'; //Video
            DivSlideName.style.display = 'block';
            DivButton.style.display = 'block';
        }
        if (id == 4) {
            div4.style.display = 'block'; //Mp3
            DivSlideName.style.display = 'block';
            DivButton.style.display = 'block';
        }
        if (id == 5) {
            div5.style.display = 'block'; //flash
            DivSlideName.style.display = 'block';
            DivButton.style.display = 'block';
        }


    }

</script>

