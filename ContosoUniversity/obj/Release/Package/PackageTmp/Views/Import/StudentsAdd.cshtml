<style type="text/css">
        @@media only screen and (max-width: 760px), (min-device-width: 768px) and (max-device-width: 1024px)
        {
        
        
            .table_div_Res table, thead, tbody, th, td, tr
            {
                display: block;
            }
        
            /* Hide table headers (but not display: none;, for accessibility) */
            .table_div_Res thead tr
            {
                position: absolute;
                top: -9999px;
                left: -9999px;
                width:100px;
            }
        
            .table_div_Res tr
            {
                border: 1px solid #ccc;
            }
        
            .table_div_Res td
            {
                /* Behave  like a "row" */
                border: none;
                border-bottom: 1px solid #eee;
                position: relative;
                padding-left: 50%;
            }
        
            .table_div_Res td:before
            {
                /* Now like a table header */
                /* Top/left values mimic padding */
                top: 6px;
                left: 6px;
                width: 45%;
                padding-right: 10px;
                white-space: nowrap;
            }
        
            /*
		Label the data
		*/
            .table_div_Res td:nth-of-type(1):before
            {
                content: "S. No";
            }
            .table_div_Res td:nth-of-type(2):before
            {
                content: "Name";
            }
        
            .table_div_Res td:nth-of-type(3):before
            {
                content: "Mobile No";
            }   .table_div_Res td:nth-of-type(4):before
            {
                content: "Address";
            }
             
            .table_div_Res td:nth-of-type(5):before
            {
                content: "Edit";
            }
        
               .table_div_Res td:nth-of-type(6):before
            {
                content: "Delete";
            }
        

        
        
        }
    </style>




